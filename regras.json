rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // views: leitura e escrita públicas
    match /views/{docId} {
      allow read, write: if true;
    }
    
    // stars: leitura e escrita públicas
    match /stars/{docId} {
      allow read, write: if true;
    }
    
    // galleries: leitura pública, escrita só para autenticados
    match /galleries/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
     // galleries: leitura pública, escrita só para autenticados
    match /content/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    
    // Outras coleções: só para usuários autenticados
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
     match /comments/{commentId} {
      allow read: if true;
      allow create: if true;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }

      match /followedBy/{entityId} {
      // Anyone can read who is following an entity (follower count, avatars)
      allow read: if true;
      // Only authenticated users can update the follower list
      // You might want more specific rules here, for example:
      // - Ensure the `followerUsers` array only contains valid user objects
      // - Ensure a user can only add/remove themselves
      allow write: if request.auth != null;
    }

   
    
  }
}
